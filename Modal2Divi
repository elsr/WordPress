<script type="text/javascript">
jQuery(document).ready(function($) {
  $('#modal1, #modal-1').magnificPopup({
      type: 'inline',
      preloader: false,
      callbacks: {
        beforeOpen: function() {
          if($(window).width() < 700) {
            this.st.focus = false;
          } else {
            this.st.focus = '#name';
          }
        }
      }
    });

  });
</script >
